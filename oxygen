-- oxygen.lua

-- Clear the monitor and set text scale
term.clear()
term.setTextScale(1.5)

-- Display "WARNING" in red
term.setTextColor(colors.red)
term.setCursorPos(1, 2)  -- Adjust position as needed
print("WARNING")

-- Display the rest of the message in white
term.setTextColor(colors.white)
term.setCursorPos(1, 4)
print("You are about to leave an oxygen-rich area.")
term.setCursorPos(1, 5)
print("Please ensure your oxygen tanks are full.")

-- Reset text color
term.setTextColor(colors.white)